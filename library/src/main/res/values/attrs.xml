<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="YetAnotherRatingBar">

        <attr name="yarb_full_mark" format="integer" />
        <attr name="yarb_half_mark" format="integer" />
        <attr name="yarb_empty_mark" format="integer" />

        <attr name="yarb_half_mark_bottom_threshold" format="float" />
        <attr name="yarb_half_mark_top_threshold" format="float" />
        <attr name="yarb_full_mark_threshold" format="float" />

        <attr name="yarb_max" format="integer" />
        <attr name="yarb_rating" format="float" />
        <attr name="yarb_mode" format="enum">
            <enum name="half" value="0" />
            <enum name="full" value="1" />
        </attr>
        <attr name="yarb_clickable" format="boolean" />

        <attr name="yarb_drawable_top_margin" format="dimension" />
        <attr name="yarb_drawable_bottom_margin" format="dimension" />
        <attr name="yarb_drawable_left_margin" format="dimension" />
        <attr name="yarb_drawable_right_margin" format="dimension" />
    </declare-styleable>

</resources>